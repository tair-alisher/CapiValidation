{% extends 'base.html.twig' %}

{% block title %}Выполните вход{% endblock %}

{% block body %}
<form method="post" class="col-md-6 mx-auto login-form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Введите свои учетные данные</h1>

    <div class="form-group">
      <label for="inputUsername" class="sr-only">Логин</label>
      <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Логин" required autofocus>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="sr-only">Пароль</label>
      <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <div class="form-group">
      <div class="clearfix">
        <button class="btn btn-primary float-right" type="submit">
          Войти
        </button>
      </div>
    </div>
</form>
{% endblock %}
