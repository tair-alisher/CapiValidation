{% extends 'base.html.twig' %}

{% block title %}Questionnaires{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for questionnaire in questionnaires %}
        <li>{{ questionnaire.title }}
    {% endfor %}

    {% if totalPages > 1 %}
    <ul class="pagination pagination-sm">
        <li{{ currentPage == 1 ? 'class="disabled"' }}>
            <a href="{{ path('questionnaires', {page: currentPage-1 < 1 ? 1 : currentPage-1}) }}">Назад</a>
        </li>
         {% for i in 1..totalPages %}
         <li {{ currentPage == i ? 'class="active"' }}>
            <a href="{{ path('questionnaires', {page: i}) }}">{{ i }}</a>
        </li>
        {% endfor %}

        <li {{ currentPage == totalPages ? 'class="disabled"' }}>
            <a href="{{ path('questionnaires', {page: currentPage+1 <= totalPages ? currentPage+1 : currentPage}) }}">Вперед</a>
        </li>
    </ul>
    {% endif %}
</div>
{% endblock %}
