<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}{% endblock %} - КАПИ Контроль</title>
  {% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="/css/site.css">
  {% endblock %}
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FFFFFF; box-shadow: 0px 2px 4px 2px #ccc;">
    <div class="container">
      <a class="navbar-brand" href="{{ path('questionnaires') }}">КАПИ Контроль</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('questionnaires') }}">Опросники</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('validation') }}">Контроли</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('validate') }}">Запуск контролей</a>
          </li>
          <li class="nav-item">
            <a href="{{ path('user_management') }}" class="nav-link">Пользователи</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container custom-container">
    {% block body %}{% endblock %}
  </div>
  {% block javascripts %}
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/scripts.js"></script>
  {% endblock %}
</body>

</html>
